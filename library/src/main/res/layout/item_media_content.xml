<?xml version="1.0" encoding="utf-8"?>
<com.ppyy.photoselector.widget.WidthFitSquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/item.placeholder.bg">

    <!--<me.xiaopan.sketch.SketchImageView
        android:id="@id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>-->

    <ViewStub
        android:id="@+id/view_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/ll_check"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:gravity="right"
        tools:ignore="RtlHardcoded">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/ic_uncheck"
            tools:ignore="VectorDrawableCompat"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_gif_flag"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_gravity="right|bottom"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_gif_flag"
        tools:ignore="VectorDrawableCompat"/>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingStart="6dp"
        tools:ignore="RtlSymmetry">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_type"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/ic_video"
            tools:ignore="VectorDrawableCompat"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="10:49"
            android:textColor="#ffffff"
            android:textSize="12sp"
            tools:ignore="SmallSp"/>
    </LinearLayout>
</com.ppyy.photoselector.widget.WidthFitSquareLayout>